<article class="card border-secondary" style="width: 50rem;">
  <h5 class="card-header text-secondary">Edit Post</h5>
  <form class="card-body edit-post-form" id="new-post-form">
    <label for="post-title" class="form-label">Edit Title</label>
    <input class="form-control" type="text" id="post-title" name="post-title" value="{{post.title}}" />
    <label class="form-label" for="content">Edit Contents</label>
    <input class="form-control" id="content" name="content" value="{{post.content}}">
    created by you on {{format_date post.created_at}}
    |
    <a class="link" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
      post.comments.length}}
    </a>
    <button type="submit" class="btn btn-outline-success">Save post</button>
    <button type="submit" class="btn btn-outline-danger">Delete post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>